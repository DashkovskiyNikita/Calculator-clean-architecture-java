<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Calculator views styles-->
    
    <style name="CalculatorButton1" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/calculator_btn_text_color_1</item>
        <item name="android:background">@drawable/calculator_btn_shape</item>
        <item name="android:backgroundTint">@color/calculator_btn_background_color_1</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CalculatorButton2" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/calculator_btn_text_color_2</item>
        <item name="android:background">@drawable/calculator_btn_shape</item>
        <item name="android:backgroundTint">@color/calculator_btn_background_color_2</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CalculatorResultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textSize">60sp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calculator_text_color</item>
    </style>

    <style name="CalculatorExpressionTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textSize">40sp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calculator_text_color</item>
    </style>

    <style name="CalculatorIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:tint">@color/calculator_icon_color</item>
        <item name="android:background">@null</item>
    </style>

</resources>